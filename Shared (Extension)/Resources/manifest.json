{
    "manifest_version": 2,
    "default_locale": "en",
    "name": "URL Linker",
    "description": "A tool to copy webpage's title and URL in your favorite format.",
    "version": "1.1",
    
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["*://*/*"]
    }],
    "permissions": ["contextMenus", "menus"]
}
